@model List<Event>

<h2>Events</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

@foreach (var eventItem in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@eventItem.EventName</h5>
            <p class="card-text">Date: @eventItem.DateTime.ToString("yyyy-MM-dd HH:mm")</p>
            <p class="card-text">Location: @eventItem.Location</p>
            <p class="card-text">Description: @eventItem.Description</p>

            <form asp-controller="Events" asp-action="JoinEvent" asp-route-eventId="@eventItem.EventID" method="post">
                <button type="submit" class="btn btn-primary">Join Event</button>
            </form>

            <a asp-controller="Events" asp-action="Details" asp-route-id="@eventItem.EventID" class="btn btn-info">View Details</a>
        </div>
    </div>
}