@{
    ViewData["Title"] = "Home";
}

<div class="card; text-center" style="width: 100%;">
    <img class="card-img-top" src="~/images/01.jpg" alt="Card image cap">
    <div class="card-body">
        <h2 class="card-title">Welcome to RunBuddies PH</h2>
        <h5 class="card-text">Discover running partners, join local clubs, and be a part of a thriving running community today.</h5>
        <a asp-controller="Search" asp-action="Filter" class="btn btn-primary btn-lg">Find My</a>
    </div>
</div>

<br />
<br />
<div class="features; text-center">
    <h2>Features</h2>
    <div class="row features">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">
                        Find My Running Buddy
                    </h3>
                    <p class="card-text">
                        Search for partners by location, schedule, and experience. Find someone who matches your pace and goals.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">
                        Discover Running Club
                    </h3>
                    <p class="card-text">
                        Locate local running clubs with current training programs, events, and social activities. Join clubs and connect with runners who share your interests.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Create and Join Events</h3>
                    <p class="card-text">
                        Participate in or organize running events. Whether it's a community run or a fun run, RunBuddies helps you stay active and engaged.
                    </p>
                </div>
            </div>
        </div>
    </div>

</div>


<br />
<br />
