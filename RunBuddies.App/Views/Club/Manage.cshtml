@model ClubManageViewModel

<div class="club-container">
    <h2>Manage Club: @Model.Club.ClubName</h2>

    <div class="manage-section">
        <h3>Manage Club</h3>
        <button class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Club", new { id = Model.Club.ClubID })'">Edit Club Info</button>
        <button class="btn btn-success" onclick="location.href='@Url.Action("CreateEvent", "Club", new { clubId = Model.Club.ClubID })'">Create Event</button>
        <button class="btn btn-info" onclick="location.href='@Url.Action("InviteMembers", "Club", new { clubId = Model.Club.ClubID })'">Invite Members</button>
    </div>

    <div class="club-info">
        <p><strong>Location:</strong> @Model.Club.Location</p>
        <p><strong>Description:</strong> @Model.Club.Description</p>
        <p><strong>Contact Email:</strong> @Model.Club.ContactEmail</p>
    </div>

    <div class="members-section">
        <h3>Club Members</h3>
        @if (Model.Club.ClubMembers != null && Model.Club.ClubMembers.Any())
        {
            <ul class="member-list">
                @foreach (var member in Model.Club.ClubMembers)
                {
                    <li class="member-item">
                        <span>@member.User.UserName</span>
                        @if (member.UserID != Model.Club.ClubModerator.UserID)
                        {
                            <button class="btn btn-sm btn-danger remove-member" data-member-id="@member.UserID">Remove</button>
                        }
                        else
                        {
                            <span class="moderator-badge">Moderator</span>
                        }
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No members yet.</p>
        }
    </div>

    <div class="events-section">
        <h3>Club Events</h3>
        @if (Model.Club.Events != null && Model.Club.Events.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Event Name</th>
                        <th>Date</th>
                        <th>Location</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evt in Model.Club.Events)
                    {
                        <tr>
                            <td>@evt.EventName</td>
                            <td>@evt.DateTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@evt.Location</td>
                            <td>
                                <a asp-action="EditEvent" asp-route-id="@evt.EventID" class="btn btn-sm btn-primary">Edit</a>
                                <button class="btn btn-sm btn-danger delete-event" data-event-id="@evt.EventID">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No events scheduled.</p>
        }
    </div>
</div>

<style>
    .club-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
    }

    .manage-section {
        margin-bottom: 20px;
        padding: 15px;
        background-color: #e9ecef;
        border-radius: 5px;
    }

        .manage-section button {
            margin-right: 10px;
            margin-bottom: 10px;
        }

    .club-info, .members-section, .events-section {
        margin-bottom: 20px;
        background-color: white;
        padding: 15px;
        border-radius: 5px;
    }

    .member-list {
        list-style-type: none;
        padding: 0;
    }

    .member-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #dee2e6;
    }

    .moderator-badge {
        background-color: #007bff;
        color: white;
        padding: 2px 5px;
        border-radius: 3px;
        font-size: 0.8em;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.remove-member').click(function () {
                var memberId = $(this).data('member-id');
                if (confirm('Are you sure you want to remove this member?')) {
                    $.post('@Url.Action("RemoveMember", "Club")', { clubId: @Model.Club.ClubID, memberId: memberId }, function (result) {
                        if (result.success) {
                            location.reload();
                        } else {
                            alert('Failed to remove member: ' + result.message);
                        }
                    });
                }
            });

            $('.delete-event').click(function () {
                var eventId = $(this).data('event-id');
                if (confirm('Are you sure you want to delete this event?')) {
                    $.post('@Url.Action("DeleteEvent", "Club")', { eventId: eventId }, function (result) {
                        if (result.success) {
                            location.reload();
                        } else {
                            alert('Failed to delete event: ' + result.message);
                        }
                    });
                }
            });
        });
    </script>
}