@model Club

<h2>Manage Club: @Model.ClubName</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Club Information</h3>
        <dl class="row">
            <dt class="col-sm-4">Name:</dt>
            <dd class="col-sm-8">@Model.ClubName</dd>

            <dt class="col-sm-4">Location:</dt>
            <dd class="col-sm-8">@Model.Location</dd>

            <dt class="col-sm-4">Description:</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4">Contact Email:</dt>
            <dd class="col-sm-8">@Model.ContactEmail</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.ClubID" class="btn btn-primary">Edit Club Info</a>
    </div>

    <div class="col-md-6">
        <h3>Club Members</h3>
        @if (Model.ClubMembers != null && Model.ClubMembers.Any())
        {
            <ul class="list-group">
                @foreach (var member in Model.ClubMembers)
                {
                    <li class="list-group-item">
                        @member.User.FirstName @member.User.LastName
                        <button class="btn btn-sm btn-danger float-right remove-member" data-member-id="@member.ClubMemberID">Remove</button>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No members yet.</p>
        }
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <h3>Club Events</h3>
        @if (Model.Events != null && Model.Events.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Event Name</th>
                        <th>Date</th>
                        <th>Location</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evt in Model.Events)
                    {
                        <tr>
                            <td>@evt.EventName</td>
                            <td>@evt.DateTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@evt.Location</td>
                            <td>
                                <a asp-action="EditEvent" asp-route-id="@evt.EventID" class="btn btn-sm btn-primary">Edit</a>
                                <button class="btn btn-sm btn-danger delete-event" data-event-id="@evt.EventID">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No events scheduled.</p>
        }
        <a asp-action="CreateEvent" asp-route-clubId="@Model.ClubID" class="btn btn-success">Create New Event</a>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.remove-member').click(function () {
                var memberId = $(this).data('member-id');
                var clubId = @Model.ClubID;
                if (confirm('Are you sure you want to remove this member?')) {
                    $.post('@Url.Action("RemoveMember")', { clubId: clubId, memberId: memberId }, function (result) {
                        if (result.success) {
                            location.reload();
                        } else {
                            alert('Failed to remove member: ' + result.message);
                        }
                    });
                }
            });

            $('.delete-event').click(function () {
                var eventId = $(this).data('event-id');
                if (confirm('Are you sure you want to delete this event?')) {
                    $.post('@Url.Action("DeleteEvent")', { eventId: eventId }, function (result) {
                        if (result.success) {
                            location.reload();
                        } else {
                            alert('Failed to delete event: ' + result.message);
                        }
                    });
                }
            });
        });
    </script>
}